<h1>Create new user</h1>
<%=form_for(:user, :url => {:action => "create"}) do |f| %>
<p>
  <%= f.label(:name)%>
  <%= f.text_field :name %>
</p>

<p>
  <%= f.label(:email)%>
  <%= f.text_field :email %>
</p>

<p>
  <%= f.label("Ph No.")%>
  <%= f.number_field :phone_number %>
</p>

<p>
  <%= f.label(:details)%>
  <%= f.text_area :details %>
</p>

<p>
  <%= f.submit("Create User")%>
</p>


<% end %>



